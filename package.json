{
  "name": "convertio",
  "version": "1.0.0",
  "description": "Browser-based image converter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src && prettier --check src",
    "lint:fix": "eslint src --fix && prettier --write src",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "check:fix": "npm run lint:fix",
    "lint-staged": "lint-staged",
    "test:changed": "vitest --changed HEAD~1 --run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "image",
    "converter",
    "webp",
    "jpeg",
    "png"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-v8": "^4.0.15",
    "canvas": "^3.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15"
  }
}
